<div class="form-group {{if valueChosen (if valid 'has-success' 'has-error') null}}">
  {{#if label}}
    <label class="control-label">{{label}}</label>
  {{/if}}
  <select onchange={{action "setProperty" value="target.value"}} class="form-control">
    <option value="0">{{prompt}}</option>
    {{#each collection as |item|}}
      <option
        value={{get item valuePath}}
        selected={{eq (get item valuePath) (get property valuePath)}}
      >
        {{get item labelPath}}
      </option>
    {{/each}}
  </select>
  {{#if (and valueChosen (not valid))}}
  <span class="help-block">can't be blank</span>
  {{/if}}
</div>
