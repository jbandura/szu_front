{{#em-form model=this submit_button=false}}
<div class="form-group">
  {{em-input
    property="course.name"
    label="Name"
  }}
</div>
<div class="row">
  <div class="col-md-4 form-group">
    {{weekday-select
      label="Weekday"
      property=(mut course.weekday)
    }}
  </div>
  <div class="col-md-3 form-group">
    {{time-input
      property=(mut course.time)
      label="Course hours"
      valid=timeChosen
    }}
  </div>
</div>
<div class="form-group">
  {{neo-select
    collection=groups
    property=course.studentGroup
    valuePath="id"
    labelPath="name"
    label="Group"
    validations="required"
    valid=groupChosen
  }}
</div>
<div class="form-group">
  <button {{action 'save'}} class="btn btn-primary" disabled={{isButtonDisabled}}>Zapisz</button>
</div>
{{/em-form}}
