<div class="form-group">
  <label>Nazwa</label>
  {{input type="text" value=course.name class="form-control"}}
</div>
<div class="form-group">
  <label>Dzie≈Ñ tygodnia</label>
  {{input type="text" value=course.weekday class="form-control"}}
</div>
