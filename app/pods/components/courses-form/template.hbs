{{#em-form model=this submit_button=false}}
<div class="form-group">
  {{em-input
    property="course.name"
    label="Name"
  }}
</div>
<div class="form-group">
  {{em-input
    property="course.weekday"
    label="Weekday"
  }}
</div>
<div class="form-group">
  {{em-input
    property="course.time"
    label="Course hours"
  }}
</div>
<div class="form-group">
  {{neo-select
    collection=groups
    property=course.studentGroup
    valuePath="id"
    labelPath="name"
    label="Group"
    validations="required"
    valid=groupChosen
  }}
</div>
<div class="form-group">
  <button {{action 'save'}} class="btn btn-primary" disabled={{isButtonDisabled}}>Zapisz</button>
</div>
{{/em-form}}
