{{#em-form model=this submit_button=false}}
  <div class="row">
    <div class="col-md-6 form-group">
      {{em-input
        property="model.name"
        label="Name"
      }}
    </div>
    <div class="col-md-6 form-group">
      {{em-input
        property="model.surname"
        label="Surname"
      }}
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        {{neo-select
          label="Group"
    		  collection=groups
    			property=model.studentGroup
          propertyName="model.studentGroup"
    			valuePath="id"
    			labelPath="name"
          validations="required"
          valid=groupChosen
    		}}
      </div>
      <div class="col-md-6">
        {{em-tel-input
          number=model.phone_nr
        }}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 form-group">
      {{em-input
        property="model.street"
        label="Street"
      }}
    </div>
    <div class="col-md-4 form-group">
      {{em-input
        property="model.city"
        label="City"
      }}
    </div>
    <div class="col-md-4">
      {{em-input
        property="model.country"
        label="Country"
      }}
    </div>
  </div>
  <div class="form-group">
  </div>

  <div class="form-group">
  </div>

  <button {{action "save"}} class="btn btn-primary" disabled={{isButtonDisabled}}>Save</button>
  <button {{action "cancel"}} class="btn btn-default">Cancel</button>

{{/em-form}}
