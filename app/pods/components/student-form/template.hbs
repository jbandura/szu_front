{{#em-form model=this submit_button=false}}
  {{log isValid}}
  <div class="row">
    <div class="col-md-6 form-group">
      {{em-input
        property="model.name"
        label="Name"
      }}
    </div>
    <div class="col-md-6 form-group">
      {{em-input
        property="model.surname"
        label="Surname"
      }}
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        {{em-select
          property="model.groups"
          label="Group"
          prompt="-- select --"
          content=groups
          optionValuePath="content.id"
          optionLabelPath="content.name"
        }}
      </div>
      <div class="col-md-6">
        {{em-input
          property="model.phone_nr"
          label="Phone Nr"
        }}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 form-group">
      {{em-input
        property="model.street"
        label="Street"
      }}
    </div>
    <div class="col-md-4 form-group">
      {{em-input
        property="model.city"
        label="City"
      }}
    </div>
    <div class="col-md-4">
      {{em-input
        property="model.country"
        label="Country"
      }}
    </div>
  </div>
  <div class="form-group">
  </div>

  <div class="form-group">
  </div>

  <button {{action "save"}} class="btn btn-primary" disabled={{isButtonDisabled}}>Save</button>
  <button {{action "cancel"}} class="btn btn-default">Cancel</button>

{{/em-form}}
