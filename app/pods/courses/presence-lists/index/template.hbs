<h2>Listy:</h2>

<p>
	{{link-to 'Nowa lista obecnoÅ›ci' 'courses.presence-lists.new' class="btn btn-primary"}}
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Course</th>
			<th>Weekday</th>
      <th>Date</th>
			<th>Present / Absent </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |list|}}
    <tr>
      <td>{{list.course.name}}</td>
			<td>{{list.course.weekday}}</td>
      <td>{{format-date list.date}}</td>
			<td>
				{{list.presentStudents.length}} / {{list.absentStudents.length}}
			</td>
      <td>
        {{#link-to 'courses.presence-lists.show' list.id}}
          <button class="btn btn-default btn-sm">Show</button>
        {{/link-to}}
      </td>
      <td>
        {{#link-to 'courses.presence-lists.edit' list.id}}
          <button class="btn btn-default btn-sm">Edit</button>
        {{/link-to}}
      </td>
      <td>
        <button class="btn btn-default btn-sm btn-danger" {{action "deleteList" list}}>Delete</button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
