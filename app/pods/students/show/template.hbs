<h2>Uczestnik: {{model.name}} {{model.surname}}</h2>
<p>
	{{link-to 'Back' 'students.index' class="btn btn-default"}}
	{{link-to 'Edit' 'students.edit' model.id class='btn btn-primary'}}
</p>

<div class="panel panel-default">
	<div class="panel-heading">
		Student details
	</div>
	<div class="panel-body">
		<p><b>Phone Nr:</b> {{model.phone_nr}}</p>
		<p><b>Address:</b> {{model.address}}</p>
		<p>
			<b>Group:</b> {{model.studentGroup.name}}
		</p>
		<hr />
	  {{presence-indicator student=model}}
	</div>
</div>
