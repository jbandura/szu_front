<form>
  <h2>{{errorMessage}}</h2>
  <div class="row">
    <div class="col-md-6 form-group">
      <label>Imię:</label>
      {{input value=model.student.name class="form-control"}}
    </div>
    <div class="col-md-6 form-group">
      <label>Nazwisko:</label>
      {{input value=model.student.surname class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label>Nr telefonu:</label>
    {{input value=model.student.phone_nr class="form-control"}}
  </div>
  <div class="row">
    <div class="col-md-6 form-group">
      <label>Ulica:</label>
      {{input value=model.student.street class="form-control"}}
    </div>
    <div class="col-md-6 form-group">
      <label>Miasto:</label>
      {{input value=model.student.city class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label>Państwo:</label>
    {{input value=model.student.country class="form-control"}}
  </div>

  <div class="form-group">
    <label>Grupa:</label>
    {{view 'select' content=model.groups selection=model.student.studentGroup optionValuePath="content.id" optionLabelPath="content.name" class="form-control"}}
  </div>

  <button {{action "save"}} class="btn btn-primary">Zapisz</button>
  <button {{action "cancel"}} class="btn btn-default">Cancel</button>

</form>
